<SignUp>:
    on_enter: root.on_enter()

    #Retângulo para criação da Tela 2.2: 'signUp'
    BoxLayout:
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'Images/Menu_SignUp/Menu_SignUp.jpg'
                
    #Configuração da tela de cadastro
    BoxLayout: 
        spacing: '1px'
        padding: '3px'
        pos_hint: {'x':0.5,'y':0.4}
        
    #Configuração de 'Nome:...'
    BoxLayout:
        spacing: '45px'
        pos_hint: {'x':0.1,'y':0.60}
        size_hint: (0.3,0.06)
        Label:
            size_hint: (None, None)
            height: 80
            width: 80
            font_size: '50px'
            text: 'Nome: '
        TextInput:
            pos_hint: {'x':0.05,'y':0.5}
            id: n1
            font_size: '30px'
    
    #Configuração de 'Email:...'
    BoxLayout:
        spacing: '45px'
        pos_hint: {'x':0.1,'y':0.50}
        size_hint: (0.3,0.06)
        Label:
            size_hint: (None, None)
            height: 80
            width: 80
            font_size: '50px'
            text: 'Email: '
        TextInput:
            pos_hint: {'x':0.05,'y':0.3}
            id: n2
            font_size: '30px'
    
    #Configuração de 'Rank:...'
    BoxLayout:
        spacing: '85px'
        pos_hint: {'x':0.1,'y':0.40}
        size_hint: (0.3,0.06)
        Label:
            size_hint: (None, None)
            height: 80
            width: 80
            font_size: '50px'
            text: 'Score:'
            x : 10
    
    # Exibe o score do jogador
        Label:
            id: score
            pos_hint: {'x':0.15,'y':0.2}
            font_size: '30px'
    
    #Configuração do Botão 'Confirmar'
    BoxLayout:
        pos_hint: {'x':0.55,'y':0.35}
        CheckButton:
            border: 0,0,0,0
            size_hint : (None, None)
            size: root.width*(21.81/100),root.height/3.5
            on_press:
                root.Registrar()
                root.manager.transition.direction = 'left'
                root.manager.current = 'ranking'
                
