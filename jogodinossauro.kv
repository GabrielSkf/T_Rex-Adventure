#Manager: Controla as telas do jogo

Manager:
	Menu:    			    #Criação da Tela 1:    'menu'
		name:'menu'
        
	Game:    			    #Criação da Tela 2:    'game'
		name: 'game' 
        
    GameOver:               #Criação da Tela 2.1:  'gameOver'
        name: 'gameOver'    

    SignUp:                 #Criação da Tela 2.2: 'signUp'
        name: 'signUp'

	Options: 			    #Criação da Tela 3:    'options'
		name:'options'
    
    Characters:             #Criação da Tela 3.1:  'characters'
        name: 'characters'
		
    Themes:                 #Criação da Tela 3.2:  'themes'
        name: 'themes'
         
    Credits:                #Criação da Tela 3.3:  'credits
        name: 'credits'

    Ranking:                #Criação da Tela 4.1:    'ranking'
        name: 'ranking'
		
<Menu>: 
    #Retângulo para criação da Tela 1: 'menu'
    BoxLayout:
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'Images/Menu/Menu_Inicio.jpg'
                                   
    #Configuração da Caixa que contém os botões (Play, Options, SignUp, Exit)
    BoxLayout:
        size_hint_y: None 
        width: root.width
        spacing: root.width*(4/100)
        x: root.width*(4/100)
        y: root.height*(8/100) 
     
        #Configuração do Botão 'Play'    
        PlayButton:
            border: 0,0,0,0
            size_hint : (None, None)
            size: root.width*(20/100),root.height/3.5
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'game'
 
        #Configuração do Botão 'Options'
        OptionsButton:
            border: 0,0,0,0
            size_hint : (None, None)
            size: root.width*(20/100),root.height/3.5
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'options'
                
        #Configuração do Botão 'SignUp'
        SignUpButton:
            border: 0,0,0,0
            size_hint : (None, None)
            size: root.width*(20/100),root.height/3.5
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'signUp'
                    
        #Configuração do Botão 'Exit'
        ExitButton:
            border: 0,0,0,0
            size_hint : (None, None)
            size: root.width*(20/100),root.height/3.5       
            on_press: root.leave()
       
    #Cria uma Caixa que contém 'Music' e 'CheckBox'
    BoxLayout:
        FloatLayout:
            size_hint_y: None
            height: root.height*(87/100)

            #Label para o texto 'Music'
            Label:
                size_hint : (None, None)
                height : root.height*(6/100)
                width : root.height*(3/100)
                text : 'Music'
                font_size: '35px'
                color: 0,0,1,10000
                pos_hint : {'x': 0.06, 'y': 0.99887}
			
            #Cria o componente CheckBox
            CheckBox :
                id : check_som
                active : True
                size_hint : (None, None)
                color: 1,0,1,1
                pos_hint : {'x': 0.08, 'y': 0.96}
                on_active: root.controla_som(check_som.active)

<Game>:
    #Retângulo para criação da Tela 2: 'game'
    BoxLayout:
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'Images/Menu_Game/Tela_Inicial_Game.png'
    
    #Layout para o título (Score: 0, Player)
    FloatLayout:        
        #Label para criação do título 'Score: 0'
        Label:
            text: 'Score: '
            font_size: root.height*(9.25/100)
            bold: True
            size_hint_y: None
            height: self.font_size
            y: root.height*0.9
        Label:
            text:
            id:score
            font_size: root.height*(9.25/100)
            bold: True
            size_hint_y: None
            height: self.font_size
            x: 150
            y: root.height*0.9
           
        #Criação do Personagem
        Player:
            id:player
            allow_stretch: True #Tamanho definido que nao depende da resolução
            size_hint: None, None
            size: 300, 400
            x: 40
            y: 400
